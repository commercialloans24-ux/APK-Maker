<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ultimate HTML to APK Converter</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap');
        body { font-family: 'Inter', sans-serif; background: #0f172a; }
        .gradient-border {
            background: linear-gradient(to right, #3b82f6, #10b981);
            padding: 2px;
            border-radius: 1rem;
        }
    </style>
</head>
<body class="text-slate-200 min-h-screen flex flex-col items-center justify-center p-6">

    <div class="max-w-2xl w-full">
        <div class="text-center mb-8">
            <h1 class="text-5xl font-extrabold mb-3 tracking-tight text-white">
                APK<span class="text-blue-500">Forge</span>
            </h1>
            <p class="text-slate-400 text-lg">Convert ZIP web projects into Android Packages.</p>
        </div>

        <div class="gradient-border shadow-2xl">
            <div class="bg-slate-900 rounded-[0.9rem] p-8">
                
                <div id="mainUI">
                    <div class="grid grid-cols-1 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-slate-400 mb-2 uppercase tracking-wider">App Display Name</label>
                            <input type="text" id="appName" placeholder="e.g. My Portfolio App" 
                                   class="w-full bg-slate-800 border border-slate-700 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 outline-none transition-all text-white">
                        </div>

                        <div id="dropZone" class="border-2 border-dashed border-slate-700 rounded-xl p-10 text-center hover:bg-slate-800/50 hover:border-blue-500 transition-all cursor-pointer group">
                            <input type="file" id="zipFile" class="hidden" accept=".zip">
                            <div class="space-y-4">
                                <div class="bg-slate-800 w-16 h-16 rounded-full flex items-center justify-center mx-auto group-hover:scale-110 transition-transform">
                                    <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                                </div>
                                <div>
                                    <p id="fileName" class="text-lg font-medium">Select project ZIP</p>
                                    <p class="text-sm text-slate-500 mt-1">Ensure index.html is in the root</p>
                                </div>
                            </div>
                        </div>

                        <button onclick="startBuild()" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-4 rounded-xl shadow-lg shadow-blue-900/20 transition-all active:scale-[0.98]">
                            Compile APK Now
                        </button>
                    </div>
                </div>

                <div id="progressUI" class="hidden py-10 text-center">
                    <div class="relative w-24 h-24 mx-auto mb-6">
                        <div class="absolute inset-0 border-4 border-blue-500/20 rounded-full"></div>
                        <div class="absolute inset-0 border-4 border-blue-500 rounded-full border-t-transparent animate-spin"></div>
                    </div>
                    <h3 class="text-2xl font-bold mb-2">Building Package...</h3>
                    <div class="w-full bg-slate-800 rounded-full h-2 mb-4">
                        <div id="progressBar" class="bg-blue-500 h-2 rounded-full transition-all duration-500" style="width: 10%"></div>
                    </div>
                    <p id="statusText" class="text-slate-400 text-sm">Initializing Cordova environment...</p>
                </div>

            </div>
        </div>

        <p class="text-center mt-6 text-slate-500 text-sm italic">
            Note: This interface requires a Node.js backend with Android SDK to generate actual files.
        </p>
    </div>

    <script>
        const fileInput = document.getElementById('zipFile');
        const dropZone = document.getElementById('dropZone');
        const fileNameDisp = document.getElementById('fileName');

        dropZone.onclick = () => fileInput.click();
        fileInput.onchange = () => {
            if(fileInput.files[0]) {
                fileNameDisp.innerText = fileInput.files[0].name;
                fileNameDisp.classList.add('text-blue-400');
            }
        };

        async function startBuild() {
            if(!fileInput.files[0]) return alert("Please upload a ZIP file!");

            document.getElementById('mainUI').classList.add('hidden');
            document.getElementById('progressUI').classList.remove('hidden');

            const steps = [
                "Unpacking web assets...",
                "Configuring Android Manifest...",
                "Running Gradle build (this takes a while)...",
                "Signing APK with debug key...",
                "Finalizing output..."
            ];

            let i = 0;
            const interval = setInterval(() => {
                if(i < steps.length) {
                    document.getElementById('statusText').innerText = steps[i];
                    document.getElementById('progressBar').style.width = ((i+1) * 20) + "%";
                    i++;
                }
            }, 3000);

            const formData = new FormData();
            formData.append('zipFile', fileInput.files[0]);
            formData.append('name', document.getElementById('appName').value);

            try {
                const response = await fetch('/convert', { method: 'POST', body: formData });
                
                if(response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = "app-debug.apk";
                    a.click();
                } else {
                    throw new Error("Server not responding");
                }
            } catch (err) {
                clearInterval(interval);
                setTimeout(() => {
                    alert("⚠️ CONNECTION ERROR: To make this work, you must run 'node server.js' on your computer. Your browser cannot build APKs alone!");
                    location.reload();
                }, 4000);
            }
        }
    </script>
</body>
</html>